// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id
  recipientId String
  content     String
  category    String
  created_at  DateTime  @default(now())
  canceled_at DateTime?
  read_at     DateTime?

  @@index([recipientId])
}
